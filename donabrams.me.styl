@import url('http://fonts.googleapis.com/css?family=Open+Sans')
@import url('http://fonts.googleapis.com/css?family=Lora')

transition(n)
  transition n
  -webkit-transition n
  -moz-transition n
  -o-transition n
  -ms-transition n
  
transform(n)
  transform n
  -webkit-transform n
  -moz-transform n
  -o-transform n
  -ms-transform n

transform-origin(n)
  transform-origin n
  -webkit-transform-origin n
  -moz-transform-origin n
  -o-transform-origin n
  -ms-transform-origin n
  
headline = #887763
secondary = #413543
bgcolor = #eee
darkest = #fff
bordercolor = #e0d3e3
labelcolor = #655c51
lowimportance = #413543
//#282828

@import "html5-reset"

body 
  font-family 'Open Sans', sans-serif
  background-color bgcolor
  font-size 14pt
  text-align center

section > h2
  font-size 150%
  color headline
  margin-bottom .75em
  margin-left .4em

body > section
  margin -1em 2em 0em 2em
  padding-top 3.5em
  text-align left
  

.vcard
  .hide 
    display none
  .type 
    display none

body > header
  display inline-block
  height 22.5em
  width 42em
  position relative
  img
    z-index 1
    transform rotate(15deg)
    position absolute
    width 12em
    height 12em
    float left
    opacity .4
    &.photo4
      top 2em
      left -2.3em
    &.photo2
      top 2em
      left 12.7em
    &.photo
      top 2em
      left 27.7em
    &.photo3
      top 2em
      left 42.7em
  h1
    position relative
    z-index 2
    font-size 400%
    color headline
    margin-top 4.0em
    margin-left .25em
    font-family 'Lora', serif
  h2
    position relative
    z-index 2
    margin-left 1em
    margin-top -.5em
    font-size 225%
    color secondary
    font-family 'Lora', serif
    display inline-block
    margin-bottom -.4em

#contactInfo 
  font-size 68% 
  display inline-block
  width 15em
  margin-left auto
  margin-right auto
  p
    margin-bottom .4em
  color headline
  .type, .countyCode, .street-address, .web
    display none
  a 
    color headline
    text-decoration none
    cursorhand
  .social a
    &:after
      content: ' .'
    &:last-child:after
      content: ''

body > nav
  margin-top 3em
  font-size 125%
  line-height 200%
  width 100%
  height 3em
  &.sticky ul
    width 100%
    background bgcolor
    position fixed
    top 0
    left 0
    box-shadow 0 .15em .15em headline
  ul
    text-align center
  li 
    display inline-block
    padding-left 1.5em
  a 
    color headline
    text-decoration none
    padding .25em 1em
    &:hover 
      color headline
  &.sticky a
    position relative
    &.active:after
      position absolute
      content ""
      bottom -.1em
      left 50%
      width 0
      height 0
      margin-left -.25em
      border .4em solid transparent
      border-bottom-color headline
      
#projects
  article
    font-size 105%
    width 38.5em
    margin-left auto
    margin-right auto
    header
      text-align right
      vertical-align top
      height 1.4em
      h3
        font-size 140%
        color secondary
        float left
      a
        margin-left .5em
        color headline
        text-decoration none
        font-size 80%
        vertical-align bottom
        line-height 3em
        &:after
          content ""
          
      margin-bottom 1em
    .description
      margin-bottom 1em
      margin-left 1em
      color headline
      p
        line-height 1.4em
    .technologies
      margin-left .5em
      display inline-block
      width 29em
      h4
        font-size 120%
        &:after
          content ":"
        margin-bottom .5em
      ul li
        list-style disc
        margin-left 2em
        color headline
        strong
          color secondary
    aside
      height 10em
      margin 1em
      img
        height 8em
        margin 1em
      text-align center
        
#experience, #education
  .employer, .degree
    color secondary
    font-size 125%
  .dateRange, .dateOfCompletion
    float right
    color secondary
  .jobTitle, .areaOfStudy
    color headline
    margin-top .1em
    margin-bottom .5em
  article 
    margin-left auto
    margin-right auto
    max-width 40em
    margin-bottom 2em
    h1
      font-size 80%
  ul 
    font-size 100%
    margin-left 1.5em
    margin-top .5em
    margin-bottom .25em
    list-style disc
    color headline
    li 
      list-style disc
      margin-bottom .25em
  strong 
    color secondary
    font-weight 600
    
#competencies
  table
    caption 
      text-align left
      p 
        font-size 80%
        color lowimportance
        margin-left .75em
        padding-bottom 1.5em
    font-size 100%
    width 55em
    thead th 
      font-size 100%
      color headline
      text-decoration bold
      padding .5em
      padding-left .75em
    tbody   
      font-size 90%
      color headline
      tr 
        border-bottom 1px solid bordercolor
        &:last-child 
          border-bottom none
        td 
          padding 1em
          padding-right 0
          border-right 1px solid bordercolor
          &:first-child 
            font-size 105%
            padding-right .5em
            text-decoration bold
            color labelcolor
          &:last-child 
            border-right none
  .workingOn 
    font-size 110%
    text-decoration bold
    color secondary
body > footer 
  padding-top 6em
  text-align right
  width 100%
  color headline
  clear both
  nav
    text-align center
    a
      position relative
      color headline
      text-decoration none
      &:before
        content ""
        border .5em solid headline
        border-left none
        border-bottom none
        position absolute
        top -2em
        left -.75em
        width 2.5em
        height 2.5em
        display block
        transform rotate(-45deg)
      
  p 
    text-align right
    padding 2em
    color secondary
  
// below 945px, lessen the margin on the sides
@media screen and (max-width:945px)
  #experience, #education, #projects
    article
      font-size 130%
  #competencies h2
    table
      font-size 200%
//below 570 px grow the contact information
@media screen and (max-width:570px)
  body > header
    width 38em
    height 24em
    h1
      margin-top 4.5em
  #contactInfo
    font-size 130%
    margin-right -4em
    p
      margin-bottom 0
// below 860px, keep the bold key readable
@media screen and (max-width:860px)
  #competencies
    caption p
      font-size 100%
// below 665px, keep the table readable
@media screen and (max-width:665px)
  #competencies
    table tbody tr td
      font-size 120%
    table tbody tr td:first-child
      font-size 130%
// below 515px, keep the table readable
@media screen and (max-width:515px)
  #competencies
    margin 0 1em
    font-size 125%
    h2
      font-size 130%
    table
      width 45em
  body > footer
    font-size 140%
@media print
  body
    font-size 11pt !important
    width 100%
    margin 2em
  body > nav, body > footer, #statement, #contactInfo .social
    display none
  #statement, #contactInfo + section, body > header 
    border none
  #contactInfo
    margin-top 1em
    width auto
    margin-right 2em
    text-align right
    vertical-align top
    .web
      display inline
    p
      margin-bottom .2em
  #statement
    font-size 100%
    padding 0
    margin-top 1em
  #experience
    margin-top 0
    width 80%
    padding 0
    h2
      display block
      font-size 150%
    h1, h3
      color #aaa !important
    font-size 75%
    article
      max-width 50em
      margin-bottom 1em
  body *
    color black !important
  #competencies
    padding-top 0
    table
      margin-left .8em
      caption
        margin-left -.8em
      width 84%
      font-size 60%
      tbody tr 
        border-bottom 1px solid #aaa
        td 
          padding .5em
          border-right 1px solid #aaa
    h2
      display block
      font-size 175%
    caption p
      display none
    .workingOn
      font-weight 600
    