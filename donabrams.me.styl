transition(n)
  transition n
  -webkit-transition n
  -moz-transition n
  -o-transition n
  -ms-transition n
  
transform(n)
  transform n
  -webkit-transform n
  -moz-transform n
  -o-transform n
  -ms-transform n

transform-origin(n)
  transform-origin n
  -webkit-transform-origin n
  -moz-transform-origin n
  -o-transform-origin n
  -ms-transform-origin n
  
headline = #887763
secondary = #413543
bgcolor = #eee
darkest = #fff
bordercolor = #e0d3e3
labelcolor = #655c51
lowimportance = #413543
//#282828
  
@import "html5-reset"

body 
  font-family sans-serif
  background-color bgcolor
  font-size 14pt
  text-align left

section
  > h2 
    font-size 200%
    color headline
    margin-bottom .75em

.vcard
  .hide 
    display none
  .type 
    display none

body > header 
  display inline-block
  height 38em
  width 38em
  position relative
  img 
    position absolute
    top 0
    left 0
    width 38em
    height 38em
    float left
    border-radius 3px
    opacity .5
  h1 
    font-size 400%
    color headline
    margin-top 7.71em
    margin-left .25em
    font-family 'Merriweather', serif
  h2 
    margin-left 1em
    margin-top -.5em
    font-size 225%
    color secondary
    font-family 'Merriweather', serif
    display inline-block
  border-right 1.25em solid headline

#contactInfo 
  display inline-block
  width 15em
  margin-left 1em
  p
    margin-bottom .5em
  color headline
  .type, .countyCode
    display none
  a 
    color headline
    text-decoration none
    cursorhand
  .social a
    &:after
      content: ' .'
    &:last-child:after
      content: ''

#contactInfo + section
  border-top 1.15em solid headline

#statement 
  padding 3em 2em
  p
    font-size 220%
    line-height 1.5em
  color labelcolor
  text-align center

body > nav
  border-top .75em solid headline
  font-size 150%
  line-height 300%
  width 100%
  height 3em
  &.sticky ul
    border-top .75em solid headline
    width 100%
    background bgcolor
    position fixed
    top 0
    left 0
    box-shadow 0 .25em .25em headline
  ul
    text-align center
  li 
    display inline-block
    padding-left 5.5em
  a 
    color headline
    text-decoration none
    &:hover 
      color headline
  &.sticky a
    position relative
    &.active:after
      position absolute
      content ""
      bottom -1em
      left 50%
      width 0
      height 0
      margin-left -.25em
      border .5em solid transparent
      border-bottom-color headline
      
#experience
  > h2
    display none
  margin -4em 2em 0em 2em
  padding-top 6.5em
  .employer 
    color secondary
    font-size 125%
  .dateRange 
    float right
    color secondary
  .jobTitle 
    color headline
    margin-top .1em
    margin-bottom .5em
  article 
    margin-left auto
    margin-right auto
    max-width 40em
    margin-bottom 2em
    h1
      font-size 80%
  ul 
    margin-left 20px
    margin-top 7px
    margin-bottom 5px
    list-style disc
    color headline
    font-size 17px
    li 
      list-style disc
  strong 
    color secondary
    font-weight 600
    letter-spacing 1px
    
#competencies
  padding-top 6.5em 
  h2
    display none
  margin 0 2em
  caption 
    text-align left
    p 
      color lowimportance
      font-size 13px
      margin-left 10px
      padding-bottom 20px
  table 
    width 98%
    thead th 
      color headline
      text-decoration bold
      padding 10px
      padding-right 15px
      padding-left 5px
      font-size 18px
    tbody 
      color headline
      font-size 15px
      tr 
        border-bottom 1px solid bordercolor
        &:last-child 
          border-bottom none
        td 
          padding-top 15px
          padding-bottom 15px
          padding-left 15px
          border-right 1px solid bordercolor
          &:first-child 
            padding-right 10px
            text-decoration bold
            font-size 18px
            color labelcolor
          &:last-child 
            border-right none
  .workingOn 
    text-decoration bold
    color secondary
    font-size 110%
body > footer 
  padding-top 6em
  text-align right
  width 100%
  color headline
  clear both
  nav
    text-align center
    a
      position relative
      color headline
      text-decoration none
      &:before
        content ""
        border .5em solid headline
        border-left none
        border-bottom none
        position absolute
        top -2em
        left -.75em
        width 2.5em
        height 2.5em
        display block
        transform rotate(-45deg)
      
  p 
    text-align right
    padding 2em
    color secondary
  
